<body>
    <div class="flex flex-row h-screen">
    <%- include("./component/sidemenu.ejs", {active: 2}) %>
    <div class="flex w-full flex-col justify-start items-start p-10 bg-[#FAFBFB] gap-5">
        <div class="flex flex-row justify-start items-center gap-5">
            <h1 class="poppins-extrabold text-4xl text-gray-700">Search On Table</h1>
        </div>
        <div class="flex flex-col justify-center items-center w-full p-20">
        <span class="poppins-extrabold text-3xl text-gray-700 m-5">Search No. Resi</span>
        <input type="search" name="query" id="search" class="w-1/2 bg-zinc-200 h-12 rounded-full text-center" placeholder="Search...">
        <input type="submit" name="submit" id="searchbtn" class="w-1/2 bg-blue-500 h-12 rounded-full text-center cursor-pointer my-3 text-white poppins-bold hover:shadow-lg transition-all duration-300     " placeholder="Submit">
        </div>
        <div class="flex w-[80vw] overflow-scroll border-1 border-gray-300 rounded-4xl" style="display: none;" id="containerTBL">
        <table id="hasil" style="width: 100%">
            <tbody>
                <tr data-fill-color="#b8d2ff" data-b-a-s="medium">
                    <%for (let y=0; y < key.length; y++) { %>
                        <td data-a-h="center" style="text-align: center; padding: 2px 10px;" data-b-a-s="hair" data-fill-color="b8d2ff" data-f-bold="true" class="border-1 bg-[#FFEB9C] poppins-bold"><%=key[y]%></td>
                    <%}%>
                </tr>
                <tr>
                    <%for (let y=0; y < key.length; y++) { %>
                        <td data-a-h="center" style="text-align: center; padding: 2px 10px;" class="border-1" data-b-a-s="hair" id="<%=key[y].split(" ").join("").toLowerCase().replace(/[^a-zA-Z0-9\s]/g, '')%>">
                        </td>
                    <%}%>
            </tr>
            </tbody>
        </table>
      </div>
        </div>
    </div>
</div>

<script>
const searchbtn = document.querySelector("#searchbtn")
searchbtn.addEventListener("click", () => {
    const searchtbl = document.querySelector("#containerTBL")
    fetch("/search?query="+document.querySelector("#search").value).then(data=>{
        data.json().then(res=>{
            if (res.length == 0) {
                    Swal.fire({
                        icon: "error",
                        title: "Not Found",
                        showConfirmButton: false,
                        timer: 1500
                     });
                } else {
            const obj = Object.keys(res[0])
            for (let i of obj) {
                console.log(res.length)
                document.querySelector("#"+i.split(" ").join("").toLowerCase().replace(/[^a-zA-Z0-9\s]/g, '')).innerHTML = res[0][i]
                searchtbl.style.display = "flex"
            }
    }
        })
            })
})
</script>
